{
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix ",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "prepare": "cd ../.. && husky install"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/__tests__/**/*.js": [
      "jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "axios": "^1.8.3",
    "crypto-js": "^4.2.0",
    "elliptic": "^6.6.1",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/jest": "^29.5.14",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-sonarjs": "3.0.2",
    "eslint-plugin-unicorn": "59.0.0",
    "globals": "^16.0.0",
    "husky": "8",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.5.3"
  }
}
